{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"lib": ["es6"],
		"composite": true,
		"sourceMap": true,
		"rootDir": "src",
		"tsBuildInfoFile" : "./client.tsbuildinfo",
		"strict": true,
		"noImplicitReturns": true,
		"outDir": "../out/client/",
		"baseUrl": "../out/",
		"paths": {
			"*" : [
				"*",
				"../client/node_modules/*"
			]
		}
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		".vscode-test"
	],
	"references": [
		{ "path": "../common" }
	]
}
